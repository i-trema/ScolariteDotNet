@model IEnumerable<AspWebProjet.Models.Session>
@using Microsoft.AspNetCore.Identity

@using AspWebProjet.Models

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{

}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AspWebProjet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AspWebProjet.styles.css" asp-append-version="true" />
</head>
<body>
            <header>
                <div>
                    <marquee >
                @foreach (var item in Model)
                {
                    <span>@item.Intitule, Date de début : @item.DateDebut, Date de fin : @item.DateFin.......... </span>
                }
            </marquee>
                </div>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MaFormaPlus</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="active">
                        <a class="btn btn-outline-primary mb-2"  href="/Sessions/Index">Accueil</a>
                        </li>
                       @* <li>
                            <a href="#about">A propos</a>
                        </li>*@
                        @*<li>
                            <a href="#training">Formations</a>
                        </li>*@
                        
                        
                        @if (!SignInManager.IsSignedIn(User))
                        {
                           <li>
                             @*<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>*@
                            
                             
                             <a class="btn btn-outline-success mb-2" asp-area="Identity" asp-page="/Account/Register">S'inscrire</a>
                        </li> 
                        }
                        
                        @*<li>
                            <a href="#review">Avis</a>
                        </li>*@
                        <li>
                            <a class="btn btn-outline-primary mb-2" href="/Home/Contact">Contactez-nous</a>
                        </li>
                        
                    </ul>
                    <a class="nav-link text-dark" id="#panier" onclick="AfficherPanier()">
                       
                         
                    </a>

                    
                    @Html.Partial("_LoginPartial")
                    @*<a class="menu cta btn"><img src="~/Images/menu_icon.png" alt="#"></a>*@
                    @*<p class="menu cta">Menu</p>*@
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script type="text/javascript" src="~/js/mobile.js"></script>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - AspWebProjet - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        function AfficherPanier(){
            $.ajax({
            url: '/Paniers/Index'
                        }

        });
        }
    </script>
</body>
</html>
