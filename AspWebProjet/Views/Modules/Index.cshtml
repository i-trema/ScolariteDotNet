@model IEnumerable<AspWebProjet.Models.Module>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Infos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parcours.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitePedagogique.Intitule)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                <img class="card-img-top" src="~/Images/@item.Logo" style="max-width:150px; margin:auto" alt="...">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Infos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parcours.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitePedagogique.Intitule)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
